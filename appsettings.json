{
  "$schema": "https://steeltoe.io/schema/latest/schema.json",
  "Management": {
    "Endpoints": {
      "Actuator": {
        "Exposure": {
          "Include": ["*"]
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Steeltoe": "Trace",
      "csharp_payment_calculator": "Information"
    }
  },
  "Steeltoe": {
    "Kubernetes": {
      "Bindings": {
        "Enable": "true",
        "Redis": {
          "Enable": "true"
        }
      }
    }
  }
}
